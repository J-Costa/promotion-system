<%= link_to t('buttons.back'), root_path, class: 'btn btn-secondary' %>
<%= link_to t('buttons.register', model: 'Promoção'), new_promotion_path, class: 'btn btn-primary' %>

<%= form_with url: search_promotions_path , method: :get do |f| %>
  <%= f.label :search, 'Busca' %>
  <%= f.select 'filter', ['Cupons', 'Promoções'], {selected: 'Promoções'} %>
  <%= f.search_field :search %>
  <%= f.submit 'Buscar' %>
<% end %>

<%= t '.result', count: @promotions.count, term: @term %>

<%= render @promotions %>